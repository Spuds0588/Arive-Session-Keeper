{
  "manifest_version": 3,
  "name": "Arive Session Keeper",
  "version": "1.0",
  "description": "Automatically clicks a background element to prevent session timeouts on the .myarive.com domain.",
  "permissions": [
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "*://*.myarive.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.myarive.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}